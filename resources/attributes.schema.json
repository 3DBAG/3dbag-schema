{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3DBAG Attribute Specification Schema",
  "description": "A schema for the attributes.json file, which defines the specifications for attributes in the 3DBAG data set.",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/attribute"
  },
  "definitions": {
    "attribute": {
      "type": "object",
      "required": [
        "type",
        "source",
        "nullable",
        "appliesTo",
        "precision",
        "unit",
        "values",
        "documentation"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["int", "float", "bool", "string", "date", "datetime", "null"],
          "description": "Data type of the attribute."
        },
        "source": {
          "type": ["string", "null"],
          "description": "The source of this attribute. It can be another data set like the BAG or a software that generates this attribute."
        },
        "nullable": {
          "type": ["boolean", "null"],
          "description": "Whether null values are valid for this attribute or they indicate an error in the process."
        },
        "appliesTo": {
          "type": "string",
          "enum": ["Building", "RoofSurface", "WallSurface", "GroundSurface", "ClosureSurface", "OuterCeilingSurface", "OuterFloorSurface", "InteriorWallSurface", "CeilingSurface", "FloorSurface"],
          "description": "Level where this attribute applies."
        },
        "precision": {
          "type": ["integer", "null"],
          "description": "Precision for numeric values."
        },
        "unit": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/translation"
            }
          ]
        },
        "values": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/translation"
              }
            }
          ]
        },
        "documentation": {
          "type": "object",
          "required": ["description", "type"],
          "properties": {
            "description": {
              "$ref": "#/definitions/translation"
            },
            "type": {
              "$ref": "#/definitions/translation"
            }
          }
        }
      }
    },
    "translation": {
      "type": "object",
      "required": ["nl", "en"],
      "properties": {
        "nl": {
          "type": "string"
        },
        "en": {
          "type": "string"
        }
      }
    }
  }
}